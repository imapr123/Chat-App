{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["/*"],
      "tests": ["tests/*"],
      "@components/*": ["./components/*"],
      "@container/*": ["./container/*"],
      "@assets/*": ["./assets/*"],
      "@navigation/*": ["./navigation/*"],
      "@services/*": ["./services/*"],
      "@module/*": ["./module/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
